{
  "compilerOptions": {
    "outFile": "./build/all.js",
    "sourceMap": true,
    "inlineSources": true,
    "removeComments": false,
    "allowJs": true,
    "target": "es5",
    "lib": [
      "DOM",
      "ES5",
      "ScriptHost",
      "ES2015.Collection",
      "es2015.promise"
    ],
    "module": "amd",
    "noImplicitAny": false,
    "noLib": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": false,
    "noImplicitReturns": true,
    "allowUnreachableCode": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
